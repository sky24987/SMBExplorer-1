<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE layout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/progress_spin_dlg"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/progress_spin_dlg_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:minHeight="32dp"
        android:text="@string/msgs_progress_spin_dlg_title"
        android:textAppearance="?android:attr/textAppearanceLarge" />
	<include layout="@layout/divider_line1_turquoise" />
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >

        <ProgressBar
            android:id="@+id/progress_spin_dlg_progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp" />
	    <LinearLayout
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:orientation="vertical" >
        	        <TextView
	            android:id="@+id/progress_spin_dlg_msg"
	            android:layout_width="fill_parent"
	            android:layout_height="80dp"
	            android:layout_marginLeft="5dp"
	            android:layout_marginRight="5dp"
	            android:gravity="center_vertical"
	            android:minHeight="60dp"
	            android:text=""
	            android:textAppearance="?android:attr/textAppearanceSmall" />
		</LinearLayout>
    </LinearLayout>
		
    <Button
        android:id="@+id/progress_spin_dlg_btn_cancel"
        android:layout_marginTop="5dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/msgs_progress_spin_dlg_cancel" />

</LinearLayout>