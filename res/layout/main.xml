<?xml version="1.0" encoding="utf-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@android:id/tabhost"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingTop="3dp"
    android:visibility="visible"
    tools:ignore="SpUsage" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="5dp" >

            <LinearLayout
                android:id="@+id/explorer_profile_tab"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/explorer_profile_tab_subtitle"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/explorer_profile_tab_subtitle_string" />

                <include layout="@layout/divider_line1" />

                <ListView
                    android:id="@+id/explorer_profile_tab_listview"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:fadeScrollbars="false" />

                <include layout="@layout/divider_line1" />

                <TextView
                    android:id="@+id/explorer_filelist_profile_tab_pastelist"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text=""
                    android:textSize="18dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/explorer_filelist_local_tab"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical" >

                <Spinner
                    android:id="@+id/explorer_filelist_local_tab_dir"
                    style="@android:style/Widget.Spinner"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/spinner_color_background"
                    android:gravity="left"
                    android:minHeight="40dp"
                    android:paddingLeft="5dp"
                    android:text="@string/explorer_filelist_local_tab_subtitle_string"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <include layout="@layout/divider_line1" />

                <ListView
                    android:id="@+id/explorer_filelist_local_tab_listview"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:fadeScrollbars="false" />

                <include layout="@layout/divider_line1" />

                <TextView
                    android:id="@+id/explorer_filelist_local_tab_pastelist"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text=""
                    android:textSize="18dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/explorer_filelist_remote_tab"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical" >

                <Spinner
                    android:id="@+id/explorer_filelist_remote_tab_dir"
                    style="@android:style/Widget.Spinner"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/spinner_color_background"
                    android:gravity="left"
                    android:minHeight="40dp"
                    android:paddingLeft="5dp"
                    android:text="@string/explorer_filelist_local_tab_subtitle_string"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <include layout="@layout/divider_line1" />

                <ListView
                    android:id="@+id/explorer_filelist_remote_tab_listview"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:fadeScrollbars="false" />

                <include layout="@layout/divider_line1" />

                <TextView
                    android:id="@+id/explorer_filelist_remote_tab_pastelist"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text=""
                    android:textSize="18dp" />
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

</TabHost>