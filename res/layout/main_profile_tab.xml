<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/explorer_profile_tab"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <TextView
        android:id="@+id/explorer_profile_tab_subtitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/explorer_profile_tab_subtitle_string" />

    <include layout="@layout/divider_line1" />

    <ListView
        android:id="@+id/explorer_profile_tab_listview"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fadeScrollbars="false" />

    <include layout="@layout/divider_line1" />

    <TextView
        android:id="@+id/explorer_filelist_profile_tab_pastelist"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:text=""
        android:textSize="18dp" />
    
</LinearLayout>
